---
import Layout from '@/layouts/Layout.astro'

import AboutMe from '@/components/AboutMe.astro'
import Badge from '@/components/Badge.astro'
import Briefcase from '@/components/icons/Briefcase.astro'
import CodeIcon from '@/components/icons/Code.astro'
import Experience from '@/components/Experience.astro'
import GitHubIcon from '@/components/icons/GitHub.astro'
import LinkedInIcon from '@/components/icons/LinkedIn.astro'
import MailIcon from '@/components/icons/Mail.astro'
import ProfileCheck from '@/components/icons/ProfileCheck.astro'
import Projects from '@/components/Projects.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import SocialPill from '@/components/SocialPill.astro'
---

<Layout
  title="Porfolio de adevlis - Desarrollador Web Full Stack con 5 años de experiencia"
  description="Contrata a adelis para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones interactivas y únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img class="rounded-full size-12 mb-4" src="me.webp" alt="adelis photo" />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Adelis <a
          href="https://www.linkedin.com/in/adelis-jose-trocoso-7b4833195/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span>+5 años de experiencia.</span><span
          class="text-yellow-800 dark:text-yellow-200"
        >
          Ingeniero de Sistemas y Desarrollador Full Stack</span
        >
        .<span class="text-red-800 dark:text-red-200">
          De Falcón, Venezuela</span
        >.
        <span class="text-sky-800 dark:text-sky-200"
          >Especializado en la creación de aplicaciones web interactivas y
          únicas.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/adelis-jose-trocoso-7b4833195/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/AdelisJose97">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:adelisjose1997@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          adelisjose1997@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
